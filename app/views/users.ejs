<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <title>SMUX</title>

    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/custom.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="css/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body ng-app="smux">

    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <a class="navbar-brand" href="/">SMUX</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li class="active"><a href="/users">User Management</a></li>
                    <li><a href="/logout">Log Out</a></li>
                </ul>
            </div><!--/ .nav-collapse -->
        </div>
    </div>

    <!-- Begin Page Content -->
    <div class="container">
        <br><br><br>
        <div class="">
        <section ng-view class="main-section">
        <a class="btn" href="/add">Add New User</a> <br/><br/>   
        <!--- User Lists -->    
        <table class="table table-hover">
            <tr>
                <th>Name</th><th>Email</th><th>Role</th><th>Actions</th>
            </tr>
            <% for(var i=0; i < users.length; i++) { %>
               <tr>
                 <td><%= users[i].name %></td>
                 <td><%= users[i].email_address%></td>
                 <td><%= users[i].role %></td>
                 <!--<td><a href="/users/edit/<%= users[i].email_address.substring(0,users[i].email_address.indexOf('@')) %>">Edit</a> | <a href="/users/delete/<%= users[i].email_address %>">Delete</a></td>-->
                 <td><a href="/<%= users[i].email_address.substring(0,users[i].email_address.indexOf('@')) %>">Edit</a> | <a href="/delete/">Delete</a></td>
               </tr>
            <% } %>
        </table>

        </section>
        </div>
    </div>



    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/custom.js"></script>

    <script type="text/javascript" src="/js/angular/angular.js"></script>
    <script type="text/javascript" src="/js/angular-route/angular-route.min.js"></script>
    <script type="text/javascript" src="/js/angular-resource/angular-resource.min.js"></script>
</body>
</html>
